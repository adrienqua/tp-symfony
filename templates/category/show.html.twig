{% extends 'base.html.twig' %}

{% block title %}Détails de la catégorie{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-8">
        <h1 class="text-3xl font-bold mb-6">Détails de la catégorie </h1>

        <div class="overflow-hidden rounded-lg shadow-md border border-gray-200">
            <table class="min-w-full table-auto">
                <tbody>
                    <tr class="bg-gray-50">
                        <th class="px-4 py-2 text-left text-sm font-medium text-gray-700 border-b">Id</th>
                        <td class="px-4 py-2 text-sm text-gray-600 border-b">{{ category.id }}</td>
                    </tr>
                    <tr>
                        <th class="px-4 py-2 text-left text-sm font-medium text-gray-700 border-b">Name</th>
                        <td class="px-4 py-2 text-sm text-gray-600 border-b">{{ category.name }}</td>
                    </tr>
                    <tr class="bg-gray-50">
                        <th class="px-4 py-2 text-left text-sm font-medium text-gray-700 border-b">Label</th>
                        <td class="px-4 py-2 text-sm text-gray-600 border-b">{{ category.label }}</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="mt-6 flex space-x-4">
            <a href="{{ path('app_category_index') }}" class="inline-block bg-gray-200 text-gray-800 text-sm font-medium px-4 py-2 rounded shadow hover:bg-gray-300">Retour à la liste</a>
            <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="inline-block bg-indigo-600 text-white text-sm font-medium px-4 py-2 rounded shadow hover:bg-indigo-700">Editer</a>
            {{ include('category/_delete_form.html.twig', { 'class': 'inline-block bg-red-600 text-white text-sm font-medium px-4 py-2 rounded shadow hover:bg-red-700' }) }}
        </div>
    </div>
{% endblock %}