{% extends 'base.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-8">
        <h1 class="text-3xl font-bold mb-6">Catégories</h1>

        <div class="overflow-x-auto">
            <table class="min-w-full table-auto border-collapse border border-gray-200 rounded-lg shadow-md">
                <thead class="bg-gray-100">
                    <tr>
                        <th class="px-4 py-2 border-b text-left text-sm font-medium text-gray-700">Id</th>
                        <th class="px-4 py-2 border-b text-left text-sm font-medium text-gray-700">Nom</th>
                        <th class="px-4 py-2 border-b text-left text-sm font-medium text-gray-700">Label</th>
                        <th class="px-4 py-2 border-b text-left text-sm font-medium text-gray-700">Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for category in categories %}
                    <tr class="hover:bg-gray-50">
                        <td class="px-4 py-2 border-b text-sm text-gray-600">{{ category.id }}</td>
                        <td class="px-4 py-2 border-b text-sm text-gray-600">{{ category.name }}</td>
                        <td class="px-4 py-2 border-b text-sm text-gray-600">{{ category.label }}</td>
                        <td class="px-4 py-2 border-b text-sm text-gray-600">
                            <a href="{{ path('app_category_show', {'id': category.id}) }}" class="text-indigo-600 hover:text-indigo-800">Voir</a>
                            <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="ml-4 text-indigo-600 hover:text-indigo-800">Editer</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="px-4 py-2 text-center text-sm text-gray-600">Pas de résultats</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="mt-6">
            <a href="{{ path('app_category_new') }}" class="inline-block bg-indigo-600 text-white text-sm font-medium px-4 py-2 rounded shadow-md hover:bg-indigo-700">Créer</a>
        </div>
    </div>
{% endblock %}